<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-2.0.xsd" logicalFilePath="001-initial-schema.xml">
  <changeSet id="002" author="g4s8">
    <sql>
      ALTER TABLE ledger DROP CONSTRAINT ledger_parent_fk;
      ALTER TABLE ledger DROP CONSTRAINT pk_ledger;
      ALTER TABLE ledger ADD CONSTRAINT pk_ledger PRIMARY KEY(id, project);
      ALTER TABLE ledger ADD CONSTRAINT ledger_parent_fk FOREIGN KEY (parent, project) REFERENCES ledger(id, project);
    </sql>
  </changeSet>
</databaseChangeLog>
